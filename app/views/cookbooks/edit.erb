<h1 class="display-4">Edit <%= @book.name %> </h1>
<form action="/cookbooks/<%= @book.id %>" method="POST">
    <input type="hidden" name="_method" value="PATCH">


    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Book Title:</span>
        </div>
        <input type="text" class="form-control" aria-label="Username" aria-describedby="basic-addon1" name="cookbook[name]" id="name" placeholder="<%= @book.name %>">
    </div>
  
     <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text text-wrap">Description:</span>
        </div>
        <textarea class="form-control" aria-label="With textarea"  name="cookbook[description]" placeholder="<%= @book.description %>" id="cookbook_description"></textarea>
    </div><br>       
   <button class="btn btn-outline-warning" id="submit" type="submit">Save</button>


</form>
